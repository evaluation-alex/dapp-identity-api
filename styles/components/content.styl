/*--------------------------------------------------------------------
* $CONTENT
--------------------------------------------------------------------*/

.content
  max-width: 960px
  padding: $space 20px

  :last-child
    margin-bottom: 0

  h1, h2, h3
    margin-bottom: 20px
    font-weight: bold

  h1
    font-size: 24px
    line-height: 1.5

  h2
    font-size: 20px

  h3
    font-size: 18px

  p, ul, ol
    margin-bottom: $space/2
